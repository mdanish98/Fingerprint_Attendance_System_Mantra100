<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fial"
        android:background="@drawable/imagefinger"
        android:orientation="vertical"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#4CAF50">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="3sp"
                android:layout_marginTop="60sp"
                android:background="@android:color/holo_blue_light"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

            <ImageView
                android:contentDescription="@string/admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/verified"
                android:paddingTop="5dp"
                android:id="@+id/user"
                android:layout_marginBottom="5sp"
                android:layout_alignBottom="@+id/textView6" />

            <TextView
                android:id="@+id/report_userid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:textSize="24sp"
                android:layout_toEndOf="@+id/user"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:textColor="#fff"
                android:layout_alignBottom="@+id/textView6" />
        </RelativeLayout>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="200sp"
                android:layout_height="200sp"
                android:layout_marginTop="10sp"
                android:contentDescription="@string/user_pic"
                android:layout_marginStart="3sp"
                android:id="@+id/report_user_pic"
                android:src="@drawable/admin"
                android:layout_marginBottom="10sp" />
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginStart="4sp"
                android:layout_marginTop="5sp">
                <TextView
                    android:id="@+id/report_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:hint="@string/name"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="5sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:hint="@string/u_type"
                    android:gravity="center_vertical"
                    android:id="@+id/report_usertype"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="5sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:hint="@string/v_type"
                    android:gravity="center_vertical"
                    android:id="@+id/report_verifymode"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="5sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:hint="@string/date_of_birth"
                    android:gravity="center_vertical"
                    android:id="@+id/report_date_of_birth"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="5sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:hint="@string/f_cnt"
                    android:id="@+id/report_fingercount"
                    android:gravity="center_vertical"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="5sp"/>

            </LinearLayout>
        </LinearLayout>

</LinearLayout>