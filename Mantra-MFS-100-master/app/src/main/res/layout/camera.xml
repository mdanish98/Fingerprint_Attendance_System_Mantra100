<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/camera_title"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:contentDescription="@string/app_name"/>
            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10sp"
                android:text="@string/select_your_source"
                android:layout_marginStart="20sp"
                android:gravity="center_vertical"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="24sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="3sp"
            android:layout_marginTop="2dp"
            android:background="@android:color/holo_blue_light"
            android:text=""
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        <Button
            android:id="@+id/gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/textview"
            android:drawableLeft="@drawable/rsz_gallery"
            android:drawablePadding="10sp"
            android:paddingBottom="10sp"
            android:paddingTop="10sp"
            android:paddingEnd="10sp"
            android:paddingStart="10sp"
            android:layout_marginTop="20sp"
            android:textSize="20sp"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"
            android:text="@string/import_from_gallery"/>

        <Button
            android:id="@+id/camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/textview"
            android:drawablePadding="10sp"
            android:drawableLeft="@drawable/rsz_camera"
            android:paddingBottom="10sp"
            android:paddingTop="10sp"
            android:paddingEnd="10sp"
            android:paddingStart="10sp"
            android:layout_marginTop="20sp"
            android:textSize="20sp"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"
            android:text="@string/import_from_camera"
            android:layout_marginBottom="20sp"/>
    </LinearLayout>
