<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ebooks_bg"
    tools:context="com.example.mega2.final_livw_demo.UserReport_Attendance">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/search"
            android:padding="8dp"
            android:layout_marginTop="10sp"
            android:background="@drawable/edittext"
            android:id="@+id/search_bar1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="1sp"
        android:weightSum="1">
        <TextView
            android:id="@+id/textView4"
            android:layout_width="0sp"
            android:layout_height="35sp"
            android:layout_weight="0.130"
            android:background="@drawable/textview"
            android:gravity="center"
            android:text="@string/user_id_ext"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Button" />

        <TextView
            android:layout_width="0sp"
            android:layout_height="35sp"
            android:layout_weight="0.30"
            android:background="@drawable/textview"
            android:gravity="center"
            android:textStyle="bold"
            android:text="@string/name_ext"
            android:textAppearance="@style/TextAppearance.AppCompat.Button" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0sp"
            android:layout_weight="0.20"
            android:layout_height="35sp"
            android:background="@drawable/textview"
            android:gravity="center"
            android:text="@string/date"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Button" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0sp"
            android:layout_height="35sp"
            android:layout_weight="0.20"
            android:background="@drawable/textview"
            android:gravity="center"
            android:textStyle="bold"
            android:text="@string/time"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Button" />
        <TextView
            android:id="@+id/textView8"
            android:layout_width="0sp"
            android:layout_weight="0.17"
            android:layout_height="35sp"
            android:textStyle="bold"
            android:background="@drawable/textview"
            android:gravity="center"
            android:text="Sync"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Button" />

    </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recycler">
        </android.support.v7.widget.RecyclerView>

    </LinearLayout>


