<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fial"
    android:background="@drawable/imagefinger"
    android:orientation="vertical"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rv1"
        android:background="#4CAF50">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="3sp"
            android:layout_marginTop="60sp"
            android:background="@android:color/holo_blue_light"
            android:text=""
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

       <ImageView
           android:contentDescription="@string/admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/verified"
            android:paddingTop="5dp"
            android:id="@+id/user"
           android:layout_marginBottom="5sp"
           android:layout_alignBottom="@+id/textView6" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/verified_user_details"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textSize="28sp"
            android:layout_toEndOf="@+id/user"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:textColor="#fff"
            android:layout_alignBottom="@+id/textView6" />
    </RelativeLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">

    <ImageView
        android:layout_width="200sp"
        android:layout_height="200sp"
        android:layout_marginTop="20sp"
        android:contentDescription="@string/user_pic"
        android:layout_marginStart="20sp"
        android:id="@+id/user_pic"
        android:src="@drawable/admin"
        android:layout_marginBottom="10sp" />

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="10sp"
            android:layout_marginTop="25sp">

            <TextView
                android:id="@+id/id1"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:gravity="center_vertical"
                android:hint="@string/id"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginEnd="10sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginTop="20sp"
                android:hint="@string/name"
                android:gravity="center_vertical"
                android:id="@+id/name"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginEnd="10sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginTop="20sp"
                android:hint="@string/hand"
                android:id="@+id/hand"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:layout_marginEnd="10sp"
                android:textStyle="bold"/>

            </LinearLayout>
        </LinearLayout>
</LinearLayout>