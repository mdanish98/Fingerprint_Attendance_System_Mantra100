<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fial"
    android:background="@drawable/imagefinger"
    android:orientation="vertical"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rv1"
        android:background="#4CAF50">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="3sp"
            android:layout_marginTop="60sp"
            android:background="@android:color/holo_blue_light"
            android:text=""
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

       <ImageView
           android:contentDescription="@string/admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/verified"
            android:paddingTop="5dp"
            android:id="@+id/user"
           android:layout_marginBottom="5sp"
           android:layout_alignBottom="@+id/textView6" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/verified_user_details"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textSize="28sp"
            android:layout_toEndOf="@+id/user"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:textColor="#fff"
            android:layout_alignBottom="@+id/textView6" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/user_pic"
            android:layout_width="363dp"
            android:layout_height="200sp"
            android:layout_marginStart="20sp"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="10sp"
            android:contentDescription="@string/user_pic"
            android:src="@drawable/admin" />

        <TextView
            android:id="@+id/id"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginEnd="10sp"
            android:gravity="center_vertical"
            android:hint="@string/id"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="20sp"
            android:layout_marginEnd="10sp"
            android:gravity="center_vertical"
            android:hint="@string/name"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/hand"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="20sp"
            android:layout_marginEnd="10sp"
            android:gravity="center_vertical"
            android:hint="@string/hand"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/editTextSession"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="20sp"
            android:layout_marginEnd="10sp"
            android:gravity="center_vertical"
            android:hint="@string/session"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/editTextDept"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="20sp"
            android:layout_marginEnd="10sp"
            android:gravity="center_vertical"
            android:hint="@string/dept"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/editTextClass"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="20sp"
            android:layout_marginEnd="10sp"
            android:gravity="center_vertical"
            android:hint="@string/class1"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/editTextSubject"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="20sp"
            android:layout_marginEnd="10sp"
            android:gravity="center_vertical"
            android:hint="@string/subject"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>